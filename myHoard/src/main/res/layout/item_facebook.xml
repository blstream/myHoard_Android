<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grid_item_border"
        tools:ignore="UselessParent">

        <com.myhoard.app.views.SquareImageView
            android:id="@+id/ivSquareAvatarItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <CheckBox
            android:id="@+id/chbItemToShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignBottom="@id/ivSquareAvatarItem"
            android:layout_alignLeft="@id/ivSquareAvatarItem"
            android:layout_margin="5dp"
            android:focusable="false"

            android:clickable="false"
            android:focusableInTouchMode="false" />
        </RelativeLayout>

</FrameLayout>