<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:textAlignment="center"
    android:minWidth="300dp"
    android:minHeight="150dp">

    <ProgressBar
        android:layout_margin="20dp"
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/loader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please wait..."
        android:background="@color/gray_background"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:id="@+id/textView2GeneratorDialog"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stop"
        android:clickable="true"
        android:background="@color/gray_background"
        android:textColor="@color/yellow_main"
        android:layout_below="@+id/textView2GeneratorDialog"
        android:id="@+id/textViewStopSynchronize"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>