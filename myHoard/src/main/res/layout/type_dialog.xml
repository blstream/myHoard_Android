<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background"
        android:textColor="@color/yellow_main"
        android:text="@string/collection_type_upper_case"
        android:padding="10dp"/>

    <RadioGroup
        android:id="@+id/rgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbOffline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/offline"
            android:textColor="@color/black"
            android:button="@null"
            android:background="@color/yellow_main"
            android:drawableRight="@drawable/type_radio_button"
            android:padding="10dp"
            />

        <View
            android:background="@color/gray_background"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>

        <RadioButton
            android:id="@+id/rbPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publics"
            android:textColor="@color/black"
            android:button="@null"
            android:background="@color/yellow_main"
            android:drawableRight="@drawable/type_radio_button"
            android:padding="10dp"
            />

        <View
            android:background="@color/gray_background"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>

        <RadioButton
            android:id="@+id/rbPrivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privates"
            android:textColor="@color/black"
            android:button="@null"
            android:background="@color/yellow_main"
            android:drawableRight="@drawable/type_radio_button"
            android:padding="10dp"
            />

    </RadioGroup>

</LinearLayout>